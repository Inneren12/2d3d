{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "specs/arch/schema_rules.json",
  "title": "Architectural Rules Schema",
  "type": "object",
  "required": [
    "schema_version",
    "domain",
    "rules"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "domain": {
      "type": "string",
      "minLength": 1
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/rule"
      }
    }
  },
  "definitions": {
    "rule": {
      "type": "object",
      "required": [
        "rule_id",
        "title",
        "constraint",
        "rationale",
        "applies_to"
      ],
      "additionalProperties": false,
      "properties": {
        "rule_id": {
          "type": "string",
          "pattern": "^ARCH-[A-Z]+-[0-9]{3}$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "constraint": {
          "type": "string",
          "minLength": 1
        },
        "rationale": {
          "type": "string",
          "minLength": 1
        },
        "applies_to": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exceptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "code_pattern": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "required": {
              "type": "string"
            },
            "forbidden": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}